---
import fs from "fs";
import path from "path";

export async function getStaticPaths() {
  const artDir = path.join(process.cwd(), "public", "art");

  const files = fs
    .readdirSync(artDir)
    .filter((file) => /\.(png|jpe?g|gif|webp|mp4|webm|mov)$/i.test(file));

  return files.map((filename) => ({
    params: { slug: path.parse(filename).name },
    props: { filename },
  }));
}

// Props passed in by Astro
const { filename } = Astro.props;
const fileUrl = `/art/${filename}`;
const isVideo = (url) => /\.(mp4|webm|mov)$/i.test(url);
const title = path.parse(filename).name;
---

<html>
    <head><title>{title}</title></head>
</html>
<body id="viewer">
    {isVideo(fileUrl) && <video src={fileUrl} autoplay muted loop controls={false} />}
    {!isVideo(fileUrl) && <img src={fileUrl} />}
</body>

<style>
    :global(html),
    :global(body) {
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        align-items: center;
        height: 100%;
        width: 100%;

        background: #000000;
    }

    img {
        max-height: 100vh;
        max-width: 100vw;
    }

    video {
        height: 100%;
        max-height: 100vh;

        width: 100%;
